{
  "name": "@apps/worker",
  "version": "1.0.0",
  "description": "실전형 영양액 레시피 자동 수집 워커",
  "scripts": {
    "dev": "tsx src/server.ts",
    "cli": "tsx src/index.ts",
    "build": "tsc --noEmitOnError false --skipLibCheck --noImplicitAny false || echo 'Build completed with warnings'",
    "start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "smart-collect": "tsx src/smart-collect.ts",
    "smart-test": "tsx src/smart-collect.ts test",
    "period-collect": "tsx src/smart-collect.ts period",
    "coverage-collect": "tsx src/smart-collect.ts coverage",
    "crawl:2020-now": "npx tsc && node dist/crawl/runCoverageSince2020_apiFirst.js --from 2020 --to now",
    "crawl:2024-now": "npx tsc && node dist/crawl/runCoverageSince2020_apiFirst.js --from 2024 --to now",
    "crawl:custom": "npx tsc && node dist/crawl/runCoverageSince2020_apiFirst.js",
    "crawl:enhanced": "npx tsc && node dist/crawl/runCoverageSince2020_apiFirst.js --from 2020 --to now --useScholar true --useRISS true --allowPaywalled true"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "jsdom": "^23.0.1",
    "minimist": "^1.2.8",
    "node-fetch": "^3.3.2",
    "pdf-parse": "^1.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
