          <div className="text-gray-500">ë¡œë”© ì¤‘...</div>
        </div>
      </div>
    );
  }

  if (error) {
    return (
      <div className="bg-white border rounded-lg p-4">
        <h3 className="font-bold mb-2">ğŸ“‹ ì´ë²¤íŠ¸ ë¡œê·¸</h3>
