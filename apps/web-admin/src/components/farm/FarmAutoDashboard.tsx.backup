  useEffect(() => {
    if (!deviceId || !farmId) return;

    const fetchEvents = async () => {
      try {
        setIsLoading(true);
        setError('');
        
        const response = await fetch(
          `/api/farms/${farmId}/devices/${deviceId}/events?limit=20`,
          { cache: 'no-store' }
        );

        if (response.ok) {
          const data = await response.json();
          setEvents(data.events || []);
