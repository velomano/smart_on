// URL ìœ íš¨ì„± ê²€ì¦ í•¨ìˆ˜
function isValidUrl(url: string): boolean {
  try {
    const urlObj = new URL(url);
    // HTTP/HTTPS í”„ë¡œí† ì½œë§Œ í—ˆìš©
    return urlObj.protocol === 'http:' || urlObj.protocol === 'https:';
  } catch {
    return false;
  }
}

