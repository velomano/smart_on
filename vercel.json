{
  "version": 2,
  "builds": [
    {
      "src": "apps/web-admin/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": "apps/web-admin/.next"
      }
    },
    {
      "src": "api/bridge/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/bridge", "dest": "/api/bridge/index" },
    { "src": "/ws", "dest": "/api/bridge/ws" },
    { "src": "/bridge/(.*)", "dest": "/api/bridge/$1" },
    {
      "src": "/(.*)",
      "dest": "apps/web-admin/$1"
    }
  ]
}
